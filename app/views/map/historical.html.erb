<%= render :partial => "map/historical/listing" %>
<%= render :partial => "map/historical/events" %>

<div id="canvas">
  <div style="float: left; width: 100px"></div>
  <div id="map"></div>
  <div class="column">
    <div class="parameters">
      <fieldset>
      <label for="period"><%= t("historical.period") %></label>
      <input id="period" name="period" type="text" />
      </fieldset>
    </div>
    <div class="listing"></div>
  </div>
  <div class="events"></div>
  <div class="toolbar">
    <div class='places button'><img src='/assets/103-map.png'><label><%= t("historical.places") %></label></div>
    <div class='geofences button'><img src='/assets/103-map.png'><label><%= t("historical.geofences") %></label></div>
  </div>
</div>


<script>
  $(function() {
    new Trackwane.Controllers.HistoricalController({el: "#canvas", devices: gon.devices});
  });
</script>
